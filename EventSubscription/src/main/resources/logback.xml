<configuration>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--<file>C:/Users/Sadaf/Desktop/nwdaf3april/nwdaf/nwdafLog/EventSubscriptionApplicationLog.log</file>-->
        <file>EventSubscriptionApplicationLog.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <!--<fileNamePattern>C:/Users/Sadaf/Desktop/nwdaf3april/nwdaf/nwdafLog/EventSubscriptionApplicationLog.log.%i.log</fileNamePattern>-->
            <fileNamePattern>logs/EventSubscriptionApplicationLog.log.%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>5</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>300KB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="FILE" />
    </root>
</configuration>